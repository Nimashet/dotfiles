#############################################################################
# View Git Status
alias gst='git status'

# Add a file to Git
alias ga='git add'

# Add all files in current working dir to Git
alias gaa='git add .'

# Commit changes to Git
alias gc='git commit -m'

#View Git log
alias glog='git log --oneline --graph --color --all --decorate'

# Create a new Git branch and checkout the new branch
alias gb='git checkout -b'

# View the differences
alias gd='git diff'

# Pull latest code from Origin
alias gpull='git pull origin'

# Push current commit to Origin
alias gpush='git push origin'

#############################################################################

#alias tmux='tmux -2'
alias less='less -R'
alias diff='colordiff'

#alias nethack-online='ssh nethack@nethack.alt.org ; clear'
alias cls='clear'

#############################################################################

# Frequent Typos
alias gti='git'


#############################################################################

# Move to the parent folder.
alias ..='cd ..;pwd'

# Move up two parent folders.
alias ...='cd ../..;pwd'

# Move up three parent folders.
alias ....='cd ../../..;pwd'

# Press h to view the bash history.
alias h='history'

# Display the directory structure better.
alias tree='tree --dirsfirst -F'
